<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data></data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:context="com.gifting.kefi.ui.activities.success_order.SuccessOrderActivity">

        <ImageView
            android:id="@+id/imageView26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:srcCompat="@drawable/ic_flower2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_110sdp"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/cart_image"
                android:layout_width="@dimen/_85sdp"
                android:layout_height="@dimen/_85sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_42sdp"
                app:cardElevation="6dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/yes_bink" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:fontFamily="@font/arial_regular"
                android:text="@string/order_placed"
                android:textColor="#EB839D"
                android:textSize="@dimen/_22sdp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_40sdp"
                android:fontFamily="@font/neusa_next_std_regular"
                android:gravity="center"
                android:lineSpacingExtra="10dp"
                android:text="@string/your_order_was_placed_successfully_nfor_more_details_check_all_my_orders_nin_cart_settings"
                android:textColor="#EB839D"
                android:textSize="@dimen/_12sdp" />



                <LinearLayout
                    android:id="@+id/my_order_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/stroke_button_bink_r23_w2"
                    android:foreground="@drawable/ripple"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_35sdp"
                    android:textColor="#EB839D">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_35sdp"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:layout_marginEnd="@dimen/_35sdp"
                        android:layout_marginBottom="@dimen/_12sdp"
                        android:fontFamily="@font/arial_bold"
                        android:text="@string/my_orders"
                        android:textColor="#EB839D"
                        android:textSize="@dimen/_10sdp" />

                </LinearLayout>


        </LinearLayout>
    </RelativeLayout>
</layout>