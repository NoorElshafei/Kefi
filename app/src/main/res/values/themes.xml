<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Kefi" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/bink_light</item>
        <item name="colorPrimaryVariant">@color/bink_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/bink</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/bink</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MyDatePicker">
        <!-- Text color -->
        <item name="android:textColorPrimary">@color/bink</item>
        <!-- Divider color -->
        <item name="colorControlNormal">@color/bink</item>
        <!--
                <item name="colorPrimary">@color/bink_light</item>

                <item name="colorPrimaryDark">@color/purple_700</item>

                <item name="android:textColor">@color/black</item>

                <item name="colorAccent">@color/purple_700</item>-->

    </style>

    <style name="MyDatePicker1">
        <!-- Text color -->
        <item name="android:textColorPrimary">@color/bink</item>
        <!-- Divider color -->
        <item name="colorControlNormal">@color/transparent</item>
        <!--
                <item name="colorPrimary">@color/bink_light</item>

                <item name="colorPrimaryDark">@color/purple_700</item>

                <item name="android:textColor">@color/black</item>

                <item name="colorAccent">@color/purple_700</item>-->

    </style>

    <style name="CustomTextAppearance1" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/calendar_customization</item>
        <item name="fontFamily">@font/arial_bold</item>
        <item name="android:textSize">9dp</item>
    </style>

    <style name="CustomTextAppearance" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/bink_dark</item>
        <item name="fontFamily">@font/arial_bold</item>
        <item name="android:textSize">9dp</item>

    </style>

    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorHeight">0dp</item>


        <item name="tabBackground">@drawable/tab_background</item>
        <item name="android:background">@drawable/rounded_grey</item>
        <item name="tabTextAppearance">@style/AppTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/bink</item>
    </style>

    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:fontFamily">@font/arial_bold</item>
        <item name="android:textColor">@color/bink</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="MyTheme" parent="@style/ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>


    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
        <!--  <item name="android:windowBackground">@color/white_alpha_60</item>-->
        <item name="android:backgroundDimAmount">0.45</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>


    <style name="CustomDialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimAmount">0</item>

    </style>


    <style name="CircularDeterminateProgressBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progress_bar_background</item>
    </style>

